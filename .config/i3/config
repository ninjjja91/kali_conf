# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# set default desktop layout (default is tiling)
# workspace_layout tabbed <stacking|tabbed>

# Configure border style <normal|1pixel|pixel xx|none|pixel>
#default_border pixel 1
default_floating_border normal

# Hide borders
hide_edge_borders none

focus_follows_mouse no
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Anonymice Nerd Font Complete Mono, Icons 18

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec terminator

#firefox
bindsym $mod+b exec firefox

# kill focused window
bindsym $mod+Shift+q kill

# start program launcher

bindsym $mod+d exec --no-startup-id rofi -show run

#thunar
bindsym $mod+m exec --no-startup-id thunar
#ranger
bindsym $mod+l exec --no-startup-id terminator -e ranger
#pavu
bindsym $mod+x exec --no-startup-id pavucontrol
#vscodium
bindsym $mod+c exec --no-startup-id vscodium
#virtualbox
bindsym $mod+t exec --no-startup-id virtualbox
